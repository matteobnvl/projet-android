<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TabBarActivity">
    <include
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/imageViewTabMovies"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/videocam_outline" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewTabMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/storefront_outline"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewTabCard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/qr_code_outline"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imageViewTabShop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cart_outline"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>